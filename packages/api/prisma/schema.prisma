generator client {
    provider      = "prisma-client-js"
    output        = "../src/generated/prisma"
    binaryTargets = ["native", "rhel-openssl-3.0.x", "darwin-arm64"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    ADMIN
    CONSULTANT
    MEMBER
}

enum TaskType {
    LIQUIDATION
    ACQUISITION
    AUTHORIZATION
    ARBITRAGE
}

enum TaskState {
    STORED
    EXECUTED
}

enum Priority {
    HIGH
    LOW
    MEDIUM
}

model User {
    id        Int      @id @default(autoincrement())
    email     String?
    nickname  String?
    address   String
    role      Role     @default(MEMBER)
    createdAt DateTime @default(now())
    tasks     Task[]   @relation("UserTasks")
}

model Task {
    id                    String   @id @default(cuid())
    transactionId         String   @unique // Transaction ID original
    taskType              TaskType // LIQUIDATION, ACQUISITION, AUTHORIZATION, ARBITRAGE
    
    // Data de la task (original)
    taskData              Json     // JSON completo de la task
    
    // Hashes de seguridad
    taskHash              String   @unique // Hash de la task (keccak256)
    transactionHash       String   @unique // Hash de la tx en chain
    
    // Campos comunes a todos los tipos
    tokenType             String?
    chain                 String?
    platform              String?
    typeOfTx              String?
    details               String?
    
    // Campos específicos de LIQUIDATION (A-M)
    companyAndArtist      String?
    collectionName        String?
    tokenId               String?
    targetPriceEth        Float?
    dateDeadline          String?
    technicalVerification Boolean?
    
    // Campos específicos de ACQUISITION (A-M)
    nftName               String?
    targetPriceBudget     String?
    transactionExecutionDate String?
    priorityDeadline      String?
    
    // Campos específicos de ARBITRAGE (A-L)
    targetPricePerToken   String?
    amount                String?
    currencyName          String?
    proportion            String?
    duration              String?
    deadline              String?
    
    // Campos comunes adicionales
    priority              Priority?
    
    // Relaciones
    userId                Int?
    user                  User?    @relation("UserTasks", fields: [userId], references: [id])
    executionProofs       TaskExecutionProof[] @relation("TaskExecutionProofs")
    
    createdAt             DateTime @default(now())
    updatedAt             DateTime @updatedAt
}

model TaskExecutionProof {
    id        String   @id @default(cuid())
    taskId    String
    task      Task     @relation("TaskExecutionProofs", fields: [taskId], references: [id])
    txHash    String
    proofHash     String?
    proofImageUrl String?
    proofDescription String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
