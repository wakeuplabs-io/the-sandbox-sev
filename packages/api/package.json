{
  "name": "api",
  "version": "1.0.0",
  "description": "Template for Hono API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "prisma generate && esbuild --bundle --outfile=./dist/index.js --platform=node --target=node22 ./src/index.ts",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prisma:migrate": "prisma migrate deploy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.1.0",
    "esbuild": "^0.25.8",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3"
  },
  "dependencies": {
    "@hono/node-server": "^1.18.0",
    "@hono/zod-validator": "^0.7.2",
    "@prisma/client": "6.9.0",
    "dotenv": "^17.2.1",
    "dotenv-expand": "^12.0.2",
    "hono": "4.8.10",
    "hono-pino": "^0.10.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "prisma": "6.9.0",
    "stoker": "^0.0.2",
    "viem": "^2.35.1",
    "zod": "^4.0.14"
  }
}
