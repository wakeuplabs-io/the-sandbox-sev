{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "incremental": false,
    "rootDir": ".",
    "outDir": ".dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": ["./**/*", "./**/*.json"],
  "exclude": ["node_modules", ".dist"]
}